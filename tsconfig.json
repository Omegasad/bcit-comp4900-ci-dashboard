{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "lib": ["es6"],
        "rootDir": "source",
        "outDir": "build",
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        // "noUnusedLocals": true
    },
    "include": [
        "source/**/*"
    ]
}